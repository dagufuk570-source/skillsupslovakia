<%- include('admin-layout-top', { title: 'Events Management', lang, useDb: true, active: 'events' }) %>

<div class="card wow fadeIn" data-wow-delay="0.1s">
  <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
      <i class="fas fa-calendar-alt fa-lg me-2"></i>
      <h5 class="mb-0">Events - <%= lang.toUpperCase() %></h5>
    </div>
    <a class="btn btn-light btn-sm" href="/admin/events/new?lang=<%= lang %>">
      <i class="fas fa-plus me-1"></i>New Event
    </a>
  </div>
  <div class="card-body">
    <% if(typeof success !== 'undefined' && success) { %>
      <% if(success === 'created') { %>
        <div class="alert alert-success d-flex align-items-center" role="alert">
          <i class="fas fa-check-circle me-2"></i>
          <div>Event has been created successfully.</div>
        </div>
      <% } else if(success === 'updated') { %>
        <div class="alert alert-success d-flex align-items-center" role="alert">
          <i class="fas fa-check-circle me-2"></i>
          <div>Event has been updated successfully.</div>
        </div>
      <% } else if(success === 'deleted') { %>
        <div class="alert alert-warning d-flex align-items-center" role="alert">
          <i class="fas fa-trash me-2"></i>
          <div>Event has been deleted.</div>
        </div>
      <% } %>
    <% } %>
    <% if(events && events.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Event</th>
              <th>Date</th>
              <th>Location</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% events.forEach(function(e) { %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <% if(e.image_url) { %>
                      <img src="<%= e.image_url %>" alt="<%= e.title %>" class="me-3 rounded" style="width: 50px; height: 50px; object-fit: cover;">
                    <% } else { %>
                      <div class="me-3 d-flex align-items-center justify-content-center bg-light rounded" style="width: 50px; height: 50px;">
                        <i class="fas fa-image text-muted"></i>
                      </div>
                    <% } %>
                    <div style="text-align: justify;">
                      <h6 class="mb-1"><%= e.title %></h6>
                      <% /* İstersen kısa açıklama alanı eklenebilir */ %>
                    </div>
                  </div>
                </td>
                <td>
                  <% if(e.event_date) { %>
                    <span class="text-muted"><i class="fas fa-calendar me-1"></i><%= new Date(e.event_date).toLocaleDateString() %></span>
                  <% } else { %>
                    <span class="text-muted">No date</span>
                  <% } %>
                </td>
                <td>
                  <% if(e.location) { %>
                    <i class="fas fa-map-marker-alt text-info me-1"></i><%= e.location %>
                  <% } else { %>
                    <span class="text-muted">No location</span>
                  <% } %>
                </td>
                <td class="text-end">
                  <div class="btn-group" role="group">
                    <a href="/events/<%= e.slug || e.id %>?lang=<%= lang %><%= e.group_id ? ('&gid=' + encodeURIComponent(e.group_id)) : '' %>" class="btn btn-sm btn-outline-primary" target="_blank" title="View Event">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/admin/events/<%= e.id %>/edit?lang=<%= lang %>" class="btn btn-sm btn-outline-secondary" title="Edit Event">
                      <i class="fas fa-edit"></i>
                    </a>
                    <form method="post" action="/admin/events/<%= e.id %>/delete?lang=<%= lang %>" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this event?')">
                      <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Event">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="text-center py-5">
        <i class="fas fa-calendar-alt fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">No Events Yet</h5>
        <p class="text-muted">Start by creating your first event.</p>
        <a href="/admin/events/new?lang=<%= lang %>" class="btn btn-primary">
          <i class="fas fa-plus me-2"></i>Create First Event
        </a>
      </div>
    <% } %>
  </div>
</div>

<%- include('admin-layout-bottom') %>
