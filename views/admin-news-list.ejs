<%- include('admin-layout-top', { title: 'News Management', lang, useDb, active: 'news' }) %>

<div class="card wow fadeIn" data-wow-delay="0.1s">
  <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
      <i class="fas fa-newspaper fa-lg me-2"></i>
      <h5 class="mb-0">News Articles</h5>
    </div>
    <a class="btn btn-light btn-sm" href="/admin/news/new">
      <i class="fas fa-plus me-1"></i>New Article
    </a>
  </div>
  <div class="card-body">
    <% if(typeof success !== 'undefined' && success) { %>
      <% if(success === 'created') { %>
        <div class="alert alert-success d-flex align-items-center" role="alert">
          <i class="fas fa-check-circle me-2"></i>
          <div>Article has been created successfully.</div>
        </div>
      <% } else if(success === 'updated') { %>
        <div class="alert alert-success d-flex align-items-center" role="alert">
          <i class="fas fa-check-circle me-2"></i>
          <div>Article has been updated successfully.</div>
        </div>
      <% } else if(success === 'deleted') { %>
        <div class="alert alert-warning d-flex align-items-center" role="alert">
          <i class="fas fa-trash me-2"></i>
          <div>Article has been deleted.</div>
        </div>
      <% } %>
    <% } %>
    <% if(news && news.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Title</th>
              <th>Published Date</th>
              <th>Status</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% news.forEach(function(n) { %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <% if(n.image_url) { %>
                      <img src="<%= n.image_url %>" alt="<%= n.title %>" class="me-3 rounded" style="width: 50px; height: 50px; object-fit: cover;">
                    <% } %>
                    <div>
                      <h6 class="mb-1"><%= n.title %></h6>
                      <% if(n.summary) { %>
                        <small class="text-muted" style="text-align: justify; display: block;"><%= n.summary.substring(0, 60) %><%=  n.summary.length > 60 ? '...' : ''  %></small>
                      <% } %>
                    </div>
                  </div>
                </td>
                <td>
                  <% if(n.published_at) { %>
                    <span class="text-muted"><%= new Date(n.published_at).toLocaleDateString() %></span>
                  <% } else { %>
                    <span class="text-muted">No date</span>
                  <% } %>
                </td>
                <td>
                  <% if(n.is_published) { %>
                    <span class="badge bg-success">Published</span>
                  <% } else { %>
                    <span class="badge bg-secondary">Draft</span>
                  <% } %>
                </td>
                <td class="text-end">
                  <div class="btn-group" role="group">
                    <% if(n.slug) { %>
                      <a href="/news/<%= n.slug %>?lang=<%= lang %>" class="btn btn-sm btn-outline-primary" target="_blank" title="View Article">
                        <i class="fas fa-eye"></i>
                      </a>
                    <% } %>
                    <a href="/admin/news/<%= n.id %>/edit" class="btn btn-sm btn-outline-secondary" title="Edit Article">
                      <i class="fas fa-edit"></i>
                    </a>
                    <form method="post" action="/admin/news/<%= n.id %>/delete" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this news article?')">
                      <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Article">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="text-center py-5">
        <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">No News Articles Yet</h5>
        <p class="text-muted">Start by creating your first news article.</p>
        <a href="/admin/news/new" class="btn btn-warning">
          <i class="fas fa-plus me-2"></i>Create First Article
        </a>
      </div>
    <% } %>
  </div>
</div>

<%- include('admin-layout-bottom') %>