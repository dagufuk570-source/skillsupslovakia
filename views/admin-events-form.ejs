<%- include('admin-layout-top', { title: (event ? t('editEvent') : t('newEvent')), lang: lang, useDb: true, active: 'events' }) %>
      <div class="card wow fadeIn" data-wow-delay="0.1s">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center">
            <i class="fas fa-<%= event ? 'edit' : 'plus' %> fa-lg me-2"></i>
            <h5 class="mb-0"><%= event ? t('editEvent') : t('newEvent') %></h5>
          </div>
          <a class="btn btn-light btn-sm" href="/admin/events">
            <i class="fas fa-arrow-left me-1"></i><%= t('backToList') %>
          </a>
        </div>
        <div class="card-body">
          <form method="post" enctype="multipart/form-data" action="<%= event ? '/admin/events/' + event.id : '/admin/events' %>">
        <% if(typeof error !== 'undefined' && error){ %>
          <div class="alert alert-danger"><i class="fas fa-exclamation-triangle me-2"></i><%= error %></div>
        <% } %>
        <% if(!event){ %>
          <div class="alert alert-info mb-4">
            <i class="fas fa-info-circle me-2"></i>
            <%= t('fillAllLanguages') %>
          </div>

          <!-- Multi-language tabs for creation -->
          <ul class="nav nav-tabs mb-3" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="tab-en" data-bs-toggle="tab" data-bs-target="#pane-en" type="button" role="tab">EN</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="tab-sk" data-bs-toggle="tab" data-bs-target="#pane-sk" type="button" role="tab">SK</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="tab-hu" data-bs-toggle="tab" data-bs-target="#pane-hu" type="button" role="tab">HU</button>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane fade show active" id="pane-en" role="tabpanel">
              <div class="mb-3">
                <label class="form-label" for="title_en"><%= t('title') %> (EN)</label>
                <input id="title_en" class="form-control" type="text" name="title_en" value="" />
              </div>
              <div class="mb-3">
                <label class="form-label" for="description_en"><%= t('description') %> (EN)</label>
                <textarea id="description_en" class="form-control wysiwyg" name="description_en" rows="4"></textarea>
              </div>
            </div>
            <div class="tab-pane fade" id="pane-sk" role="tabpanel">
              <div class="mb-3">
                <label class="form-label" for="title_sk"><%= t('title') %> (SK)</label>
                <input id="title_sk" class="form-control" type="text" name="title_sk" value="" />
              </div>
              <div class="mb-3">
                <label class="form-label" for="description_sk"><%= t('description') %> (SK)</label>
                <textarea id="description_sk" class="form-control wysiwyg" name="description_sk" rows="4"></textarea>
              </div>
            </div>
            <div class="tab-pane fade" id="pane-hu" role="tabpanel">
              <div class="mb-3">
                <label class="form-label" for="title_hu"><%= t('title') %> (HU)</label>
                <input id="title_hu" class="form-control" type="text" name="title_hu" value="" />
              </div>
              <div class="mb-3">
                <label class="form-label" for="description_hu"><%= t('description') %> (HU)</label>
                <textarea id="description_hu" class="form-control wysiwyg" name="description_hu" rows="4"></textarea>
              </div>
            </div>
          </div>

          <!-- Additional Images -->
          <div class="mb-4">
            <h5 class="text-info border-bottom pb-2"><i class="fas fa-images me-2"></i><%= t('additionalImages') %></h5>
            <div class="alert alert-light">
              <i class="fas fa-info-circle me-2"></i>
              <%= t('uploadMultipleImages') %>
            </div>
            <div class="mb-3">
              <label class="form-label" for="additional_images_create"><%= t('galleryImages') %></label>
              <input id="additional_images_create" class="form-control" type="file" name="additional_images" accept="image/*" multiple />
              <div class="form-text"><%= t('multipleFilesAllowed') %></div>
            </div>
          </div>

          <!-- Event Details (shared) -->
          <div class="mb-4">
            <h5 class="text-secondary border-bottom pb-2"><i class="fas fa-cog me-2"></i><%= t('eventDetails') %></h5>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label" for="event_date"><%= t('date') %></label>
                <input id="event_date" class="form-control" type="date" name="event_date" required />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label" for="location"><%= t('location') %></label>
                <input id="location" class="form-control" type="text" name="location" required />
              </div>
            </div>
          </div>
        <% } %>
        <% if(event){ %>
          <!-- Gallery management on edit -->
          <div class="mb-4">
            <h5 class="text-info border-bottom pb-2"><i class="fas fa-images me-2"></i><%= t('gallery') %></h5>
            <% var _imgs = (typeof additionalImages !== 'undefined' && additionalImages) ? additionalImages : []; %>
            <% if(_imgs.length > 0){ %>
              <div class="row g-3 mb-3">
                <% _imgs.forEach(function(img){ %>
                  <div class="col-md-3">
                    <div class="card h-100">
                      <img src="<%= img.image_url %>" class="card-img-top" alt=""/>
                      <div class="card-body p-2">
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" name="remove_image_ids" value="<%= img.id %>" id="rm_<%= img.id %>">
                          <label class="form-check-label" for="rm_<%= img.id %>"><%= t('delete') %></label>
                        </div>
                        <div class="form-check mt-2">
                          <input class="form-check-input" type="radio" name="lead_image_url" value="<%= img.image_url %>" id="lead_<%= img.id %>" <%= (event.image_url === img.image_url) ? 'checked' : '' %> >
                          <label class="form-check-label" for="lead_<%= img.id %>">Set as cover</label>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <div class="alert alert-light"><%= t('noDataAvailable') %></div>
            <% } %>
            <div class="mb-3">
              <label class="form-label" for="additional_images_edit"><%= t('uploadImages') %></label>
              <input id="additional_images_edit" class="form-control" type="file" name="additional_images" accept="image/*" multiple />
            </div>
          </div>
          <!-- Shared Event Details (edit) -->
          <div class="mb-4">
            <h5 class="text-secondary border-bottom pb-2"><i class="fas fa-cog me-2"></i><%= t('eventDetails') %></h5>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label" for="event_date"><%= t('date') %></label>
                <input id="event_date" class="form-control" type="date" name="event_date" value="<%= event.event_date ? new Date(event.event_date).toISOString().substring(0,10) : '' %>" />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label" for="location"><%= t('location') %></label>
                <input id="location" class="form-control" type="text" name="location" value="<%= event.location || '' %>" />
              </div>
            </div>
          </div>
          <!-- Edit mode - multi-language tabs -->
          <ul class="nav nav-tabs mb-3" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="tab-en" data-bs-toggle="tab" data-bs-target="#pane-en" type="button" role="tab">EN</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="tab-sk" data-bs-toggle="tab" data-bs-target="#pane-sk" type="button" role="tab">SK</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="tab-hu" data-bs-toggle="tab" data-bs-target="#pane-hu" type="button" role="tab">HU</button>
            </li>
          </ul>
          <div class="tab-content">
            <% const evEn = (eventsByLang && eventsByLang.en) || (event.lang==='en' ? event : null) || {}; %>
            <% const evSk = (eventsByLang && eventsByLang.sk) || (event.lang==='sk' ? event : null) || {}; %>
            <% const evHu = (eventsByLang && eventsByLang.hu) || (event.lang==='hu' ? event : null) || {}; %>
            <div class="tab-pane fade show active" id="pane-en" role="tabpanel">
              <div class="mb-3">
                <label class="form-label" for="title_en"><%= t('title') %> (EN)</label>
                <input id="title_en" class="form-control" type="text" name="title_en" value="<%= evEn.title || '' %>" />
              </div>
              <div class="mb-3">
                <label class="form-label" for="description_en"><%= t('description') %> (EN)</label>
                <textarea id="description_en" class="form-control wysiwyg" name="description_en" rows="6"><%= evEn.description || '' %></textarea>
              </div>
            </div>

            <div class="tab-pane fade" id="pane-sk" role="tabpanel">
              <div class="mb-3">
                <label class="form-label" for="title_sk"><%= t('title') %> (SK)</label>
                <input id="title_sk" class="form-control" type="text" name="title_sk" value="<%= evSk.title || '' %>" />
              </div>
              <div class="mb-3">
                <label class="form-label" for="description_sk"><%= t('description') %> (SK)</label>
                <textarea id="description_sk" class="form-control wysiwyg" name="description_sk" rows="6"><%= evSk.description || '' %></textarea>
              </div>
            </div>

            <div class="tab-pane fade" id="pane-hu" role="tabpanel">
              <div class="mb-3">
                <label class="form-label" for="title_hu"><%= t('title') %> (HU)</label>
                <input id="title_hu" class="form-control" type="text" name="title_hu" value="<%= evHu.title || '' %>" />
              </div>
              <div class="mb-3">
                <label class="form-label" for="description_hu"><%= t('description') %> (HU)</label>
                <textarea id="description_hu" class="form-control wysiwyg" name="description_hu" rows="6"><%= evHu.description || '' %></textarea>
              </div>
            </div>
          </div>
          <!-- Removed single image upload in edit -->
        <% } %>
            <div class="text-center">
              <button class="btn btn-primary btn-lg px-5" type="submit">
                <i class="fas fa-<%= event ? 'save' : 'plus' %> me-2"></i>
                <%= event ? t('update') : t('save') %>
              </button>
            </div>
          </form>
        </div>
      </div>
<%- include('admin-layout-bottom') %>
