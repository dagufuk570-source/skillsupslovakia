<%- include('admin-layout-top', { title: 'Settings â€º GDPR', lang, useDb, active: 'settings-gdpr' }) %>
<div class="row g-3">
  <div class="col-12">
    <div class="card wow fadeIn" data-wow-delay="0.1s">
      <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <i class="fas fa-user-shield fa-lg me-2"></i>
          <h5 class="mb-0">GDPR / Privacy Policy</h5>
        </div>
        <small class="badge bg-dark">Language: <%= lang.toUpperCase() %></small>
      </div>
      <div class="card-body">
        <form class="card p-3" method="post" action="/admin/settings/gdpr?lang=<%= lang %>">
          <% const langs = ['en','sk','hu']; %>
          <ul class="nav nav-tabs sticky-top bg-white" style="top: 0; z-index: 1020;" role="tablist">
            <% langs.forEach((l, i) => { %>
              <li class="nav-item" role="presentation">
                <button class="nav-link <%= i===0 ? 'active' : '' %>" id="gdpr-<%= l %>-tab" data-bs-toggle="tab" data-bs-target="#gdpr-<%= l %>" type="button" role="tab" aria-controls="gdpr-<%= l %>" aria-selected="<%= i===0 ? 'true' : 'false' %>"><%= l.toUpperCase() %></button>
              </li>
            <% }) %>
          </ul>
          <div class="tab-content border border-top-0 p-3">
            <% langs.forEach((l, i) => { const rec = pagesByLang && pagesByLang[l]; %>
              <div class="tab-pane fade <%= i===0 ? 'show active' : '' %>" id="gdpr-<%= l %>" role="tabpanel" aria-labelledby="gdpr-<%= l %>-tab">
                <div class="mb-3">
                  <label class="form-label" for="gdpr_editor_<%= l %>">GDPR Text (<%= l.toUpperCase() %>)</label>
                  <textarea class="form-control wysiwyg gdpr-editor" id="gdpr_editor_<%= l %>" name="content_<%= l %>" rows="12" placeholder="Enter GDPR / Privacy Policy text for <%= l.toUpperCase() %>"><%= (rec && rec.content) ? rec.content : '' %></textarea>
                </div>
              </div>
            <% }) %>
          </div>
          <div class="text-center mt-3">
            <button class="btn btn-warning btn-lg px-5" type="submit">
              <i class="fas fa-save me-2"></i>Save GDPR
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
</div>
<%- include('admin-layout-bottom') %>
