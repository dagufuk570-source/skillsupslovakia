<%- include('admin-layout-top', { title: (news ? 'Edit Article' : 'New Article'), lang: lang, useDb: true, active: 'news' }) %>
      <div class="card wow fadeIn" data-wow-delay="0.1s">
        <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center">
            <i class="fas fa-<%= news ? 'edit' : 'plus' %> fa-lg me-2"></i>
            <h5 class="mb-0"><%= news ? 'Edit' : 'New' %> News Article</h5>
          </div>
          <a class="btn btn-light btn-sm" href="/admin/news">
            <i class="fas fa-arrow-left me-1"></i>Back to News
          </a>
        </div>
        <div class="card-body">
          <form method="post" enctype="multipart/form-data" action="<%= news ? '/admin/news/' + news.id : '/admin/news' %>">
        <% if(typeof error !== 'undefined' && error){ %>
          <div class="alert alert-danger"><i class="fas fa-exclamation-triangle me-2"></i><%= error %></div>
        <% } %>
        <% if(!news){ %>
          <div class="alert alert-info mb-4">
            <i class="fas fa-info-circle me-2"></i>
            Create content for all languages at once. This will create linked versions of the news article.
          </div>
          <!-- Tabs for create -->
          <ul class="nav nav-tabs mb-3" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="tab-en" data-bs-toggle="tab" data-bs-target="#pane-en" type="button" role="tab">EN</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="tab-sk" data-bs-toggle="tab" data-bs-target="#pane-sk" type="button" role="tab">SK</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="tab-hu" data-bs-toggle="tab" data-bs-target="#pane-hu" type="button" role="tab">HU</button>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane fade show active" id="pane-en" role="tabpanel">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="title_en">Title (EN)</label>
                  <input id="title_en" class="form-control" type="text" name="title_en" value="" />
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="slug_en">Slug (EN, optional)</label>
                  <input id="slug_en" class="form-control" type="text" name="slug_en" placeholder="auto from title if empty" />
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="summary_en">Summary (EN)</label>
                <textarea id="summary_en" class="form-control" name="summary_en" rows="3" placeholder="Brief summary for article cards"></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label" for="content_en">Content (EN)</label>
                <textarea id="content_en" class="form-control wysiwyg" name="content_en" rows="6"></textarea>
              </div>
            </div>
            <div class="tab-pane fade" id="pane-sk" role="tabpanel">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="title_sk">Title (SK)</label>
                  <input id="title_sk" class="form-control" type="text" name="title_sk" value="" />
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="slug_sk">Slug (SK, optional)</label>
                  <input id="slug_sk" class="form-control" type="text" name="slug_sk" placeholder="auto from title if empty" />
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="summary_sk">Summary (SK)</label>
                <textarea id="summary_sk" class="form-control" name="summary_sk" rows="3" placeholder="Brief summary for article cards"></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label" for="content_sk">Content (SK)</label>
                <textarea id="content_sk" class="form-control wysiwyg" name="content_sk" rows="6"></textarea>
              </div>
            </div>
            <div class="tab-pane fade" id="pane-hu" role="tabpanel">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="title_hu">Title (HU)</label>
                  <input id="title_hu" class="form-control" type="text" name="title_hu" value="" />
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="slug_hu">Slug (HU, optional)</label>
                  <input id="slug_hu" class="form-control" type="text" name="slug_hu" placeholder="auto from title if empty" />
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="summary_hu">Summary (HU)</label>
                <textarea id="summary_hu" class="form-control" name="summary_hu" rows="3" placeholder="Brief summary for article cards"></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label" for="content_hu">Content (HU)</label>
                <textarea id="content_hu" class="form-control wysiwyg" name="content_hu" rows="6"></textarea>
              </div>
            </div>
          </div>

          <!-- Additional Images -->
          <div class="mb-4">
            <h5 class="text-info border-bottom pb-2"><i class="fas fa-images me-2"></i>Additional Images</h5>
            <div class="alert alert-light">
              <i class="fas fa-info-circle me-2"></i>
              Upload multiple images that will be displayed in the article gallery on detail pages.
            </div>
            <div class="mb-3">
              <label class="form-label" for="additional_images_create">Gallery Images</label>
              <input id="additional_images_create" class="form-control" type="file" name="additional_images" accept="image/*" multiple />
              <div class="form-text">You can select multiple images at once (Ctrl+click or Shift+click).</div>
            </div>
          </div>

          <!-- Publishing Options -->
          <div class="mb-4">
            <h5 class="text-secondary border-bottom pb-2"><i class="fas fa-cog me-2"></i>Publishing Options</h5>
            <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="published_at">Published Date</label>
                  <input id="published_at" class="form-control" type="datetime-local" name="published_at" />
                <div class="form-text">Leave empty to use current date/time</div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="form-check mt-4">
                  <input id="is_published" class="form-check-input" type="checkbox" name="is_published" value="true" checked>
                  <label class="form-check-label" for="is_published">
                    Publish immediately
                  </label>
                </div>
              </div>
            </div>
          </div>

          <!-- No single-language fallback -->
        <% } %>

        <% if(news){ %>
          <!-- Gallery management on edit -->
          <div class="mb-4">
            <h5 class="text-info border-bottom pb-2"><i class="fas fa-images me-2"></i>Gallery</h5>
            <% if((additionalImages||[]).length > 0){ %>
              <div class="row g-3 mb-3">
                <% additionalImages.forEach(function(img){ %>
                  <div class="col-md-3">
                    <div class="card h-100">
                      <img src="<%= img.image_url %>" class="card-img-top" alt=""/>
                      <div class="card-body p-2">
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" name="remove_image_ids" value="<%= img.id %>" id="rm_<%= img.id %>">
                          <label class="form-check-label" for="rm_<%= img.id %>">Remove</label>
                        </div>
                        <div class="form-check mt-2">
                          <input class="form-check-input" type="radio" name="lead_image_url" value="<%= img.image_url %>" id="lead_<%= img.id %>" <%= (news.image_url === img.image_url) ? 'checked' : '' %> >
                          <label class="form-check-label" for="lead_<%= img.id %>">Set as cover</label>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <div class="alert alert-light">No images yet. You can upload below.</div>
            <% } %>
            <div class="mb-3">
              <label class="form-label" for="additional_images_edit">Add Images</label>
              <input id="additional_images_edit" class="form-control" type="file" name="additional_images" accept="image/*" multiple />
            </div>
          </div>
          <!-- Edit mode - multi-language tabs -->
          <ul class="nav nav-tabs mb-3" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="tab-en" data-bs-toggle="tab" data-bs-target="#pane-en" type="button" role="tab">EN</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="tab-sk" data-bs-toggle="tab" data-bs-target="#pane-sk" type="button" role="tab">SK</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="tab-hu" data-bs-toggle="tab" data-bs-target="#pane-hu" type="button" role="tab">HU</button>
            </li>
          </ul>
          <% const nEn = (newsByLang && newsByLang.en) || (news.lang==='en' ? news : null) || {}; %>
          <% const nSk = (newsByLang && newsByLang.sk) || (news.lang==='sk' ? news : null) || {}; %>
          <% const nHu = (newsByLang && newsByLang.hu) || (news.lang==='hu' ? news : null) || {}; %>
          <div class="tab-content">
            <div class="tab-pane fade show active" id="pane-en" role="tabpanel">
              <div class="mb-3">
                <label class="form-label" for="title_en_edit">Title (EN)</label>
                <input id="title_en_edit" class="form-control" type="text" name="title_en" value="<%= nEn.title || '' %>" />
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="slug_en_edit">Slug (EN, optional)</label>
                  <input id="slug_en_edit" class="form-control" type="text" name="slug_en" value="<%= nEn.slug || '' %>" placeholder="auto from title if empty" />
                </div>
                <div class="col-md-6 mb-3">
                  <div class="form-label">Published</div>
                  <div class="form-check mt-2">
                    <input id="is_published_en" class="form-check-input" type="checkbox" name="is_published_en" value="true" <%= nEn.is_published ? 'checked' : '' %>>
                    <label class="form-check-label" for="is_published_en">Published</label>
                  </div>
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="published_at_en_edit">Published Date</label>
                <input id="published_at_en_edit" class="form-control" type="datetime-local" name="published_at_en" value="<%= nEn.published_at ? new Date(nEn.published_at).toISOString().slice(0, 16) : '' %>" />
              </div>
              <div class="mb-3">
                <label class="form-label" for="summary_en_edit">Summary (EN)</label>
                <textarea id="summary_en_edit" class="form-control" name="summary_en" rows="3"><%= nEn.summary || '' %></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label" for="content_en_edit">Content (EN)</label>
                <textarea id="content_en_edit" class="form-control wysiwyg" name="content_en" rows="6"><%= nEn.content || '' %></textarea>
              </div>
            </div>

            <div class="tab-pane fade" id="pane-sk" role="tabpanel">
              <div class="mb-3">
                <label class="form-label" for="title_sk_edit">Title (SK)</label>
                <input id="title_sk_edit" class="form-control" type="text" name="title_sk" value="<%= nSk.title || '' %>" />
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="slug_sk_edit">Slug (SK, optional)</label>
                  <input id="slug_sk_edit" class="form-control" type="text" name="slug_sk" value="<%= nSk.slug || '' %>" placeholder="auto from title if empty" />
                </div>
                <div class="col-md-6 mb-3">
                  <div class="form-label">Published</div>
                  <div class="form-check mt-2">
                    <input id="is_published_sk" class="form-check-input" type="checkbox" name="is_published_sk" value="true" <%= nSk.is_published ? 'checked' : '' %>>
                    <label class="form-check-label" for="is_published_sk">Published</label>
                  </div>
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="published_at_sk_edit">Published Date</label>
                <input id="published_at_sk_edit" class="form-control" type="datetime-local" name="published_at_sk" value="<%= nSk.published_at ? new Date(nSk.published_at).toISOString().slice(0, 16) : '' %>" />
              </div>
              <div class="mb-3">
                <label class="form-label" for="summary_sk_edit">Summary (SK)</label>
                <textarea id="summary_sk_edit" class="form-control" name="summary_sk" rows="3"><%= nSk.summary || '' %></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label" for="content_sk_edit">Content (SK)</label>
                <textarea id="content_sk_edit" class="form-control wysiwyg" name="content_sk" rows="6"><%= nSk.content || '' %></textarea>
              </div>
            </div>

            <div class="tab-pane fade" id="pane-hu" role="tabpanel">
              <div class="mb-3">
                <label class="form-label" for="title_hu_edit">Title (HU)</label>
                <input id="title_hu_edit" class="form-control" type="text" name="title_hu" value="<%= nHu.title || '' %>" />
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label" for="slug_hu_edit">Slug (HU, optional)</label>
                  <input id="slug_hu_edit" class="form-control" type="text" name="slug_hu" value="<%= nHu.slug || '' %>" placeholder="auto from title if empty" />
                </div>
                <div class="col-md-6 mb-3">
                  <div class="form-label">Published</div>
                  <div class="form-check mt-2">
                    <input id="is_published_hu" class="form-check-input" type="checkbox" name="is_published_hu" value="true" <%= nHu.is_published ? 'checked' : '' %>>
                    <label class="form-check-label" for="is_published_hu">Published</label>
                  </div>
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="published_at_hu_edit">Published Date</label>
                <input id="published_at_hu_edit" class="form-control" type="datetime-local" name="published_at_hu" value="<%= nHu.published_at ? new Date(nHu.published_at).toISOString().slice(0, 16) : '' %>" />
              </div>
              <div class="mb-3">
                <label class="form-label" for="summary_hu_edit">Summary (HU)</label>
                <textarea id="summary_hu_edit" class="form-control" name="summary_hu" rows="3"><%= nHu.summary || '' %></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label" for="content_hu_edit">Content (HU)</label>
                <textarea id="content_hu_edit" class="form-control wysiwyg" name="content_hu" rows="6"><%= nHu.content || '' %></textarea>
              </div>
            </div>
          </div>
        <% } %>

            <div class="text-center">
              <button class="btn btn-warning btn-lg px-5" type="submit">
                <i class="fas fa-<%= news ? 'save' : 'plus' %> me-2"></i>
                <%= news ? 'Update Article' : 'Create Article' %>
              </button>
            </div>
          </form>
        </div>
      </div>
<%- include('admin-layout-bottom') %>