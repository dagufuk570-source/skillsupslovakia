<%- include('admin-layout-top', { title: t('managePartners'), active: 'partners' }) %>

<h2 class="mb-4"><%= t('managePartners') %></h2>

<% if(success === 'created') { %>
  <div class="alert alert-success"><%= t('partnerCreated') %></div>
<% } else if(success === 'updated') { %>
  <div class="alert alert-success"><%= t('partnerUpdated') %></div>
<% } else if(success === 'deleted') { %>
  <div class="alert alert-success"><%= t('partnerDeleted') %></div>
<% } else if(locals.error) { %>
  <div class="alert alert-danger">Error: <%= error %></div>
<% } %>

<div class="mb-3">
  <a href="/admin/partners/new?lang=<%= lang %>" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i> <%= t('addNewPartner') %>
  </a>
</div>

<% if(partners && partners.length > 0) { %>
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead class="table-light">
        <tr>
          <th style="width:100px"><%= t('partnerLogo') %></th>
          <th><%= t('partnerName') %></th>
          <th style="width:120px"><%= t('sortOrder') %></th>
          <th style="width:180px"><%= t('actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% partners.forEach(partner => { %>
          <tr>
            <td class="text-center">
              <% if(partner.logo_url) { %>
                <img src="<%= partner.logo_url %>" alt="<%= partner.name %>" style="max-width:80px; max-height:80px; object-fit:contain;">
              <% } else { %>
                <span class="text-muted"><%= t('noLogo') || 'No logo' %></span>
              <% } %>
            </td>
            <td class="align-middle"><strong><%= partner.name %></strong></td>
            <td class="align-middle text-center"><%= partner.sort_order || 0 %></td>
            <td class="align-middle">
              <a href="/admin/partners/<%= partner.id %>/edit?lang=<%= lang %>" class="btn btn-sm btn-warning">
                <i class="bi bi-pencil"></i> <%= t('edit') %>
              </a>
              <form action="/admin/partners/<%= partner.id %>/delete?lang=<%= lang %>" method="POST" style="display:inline;" onsubmit="return confirm('<%= t('deleteConfirm') %>');">
                <button type="submit" class="btn btn-sm btn-danger">
                  <i class="bi bi-trash"></i> <%= t('delete') %>
                </button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
<% } else { %>
  <div class="alert alert-info"><%= t('noPartnersYet') %> <a href="/admin/partners/new?lang=<%= lang %>"><%= t('addNewPartner') %></a>.</div>
<% } %>

<%- include('admin-layout-bottom') %>
