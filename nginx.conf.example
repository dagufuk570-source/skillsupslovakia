# Nginx configuration for SkillsUp Slovakia
# Save this file to: /etc/nginx/sites-available/skillsupslovakia
# Enable it: sudo ln -s /etc/nginx/sites-available/skillsupslovakia /etc/nginx/sites-enabled/
# Test config: sudo nginx -t
# Reload: sudo systemctl reload nginx

server {
    listen 80;
    listen [::]:80;
    
    # Replace with your domain or server IP
    server_name your-domain.com www.your-domain.com;
    
    # Logging
    access_log /var/log/nginx/skillsupslovakia-access.log;
    error_log /var/log/nginx/skillsupslovakia-error.log;
    
    # Max upload size (for images)
    client_max_body_size 10M;
    
    # Serve static files directly
    location /uploads/ {
        alias /var/www/skillsupslovakia/public/uploads/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
    
    location /css/ {
        alias /var/www/skillsupslovakia/public/css/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
    
    location /js/ {
        alias /var/www/skillsupslovakia/public/js/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
    
    location /img/ {
        alias /var/www/skillsupslovakia/public/img/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
    
    location /lib/ {
        alias /var/www/skillsupslovakia/public/lib/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
    
    # Proxy to Node.js app
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}

