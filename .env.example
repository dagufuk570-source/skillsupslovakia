UPLOAD_DIR=./public/uploads
# Or use absolute path: UPLOAD_DIR=/var/www/skillsupslovakia/public/uploads

# Blob Storage Configuration (when STORAGE_TYPE=blob)
# Only needed if continuing to use Vercel Blob Storage
# BLOB_READ_WRITE_TOKEN=vercel_blob_rw_YOUR_TOKEN_HERE

# Admin authentication
ADMIN_USER=admin
ADMIN_PASS=change-me

# SMTP settings for contact form (Natro)
SMTP_HOST=mail.kurumsaleposta.com
# Use one of the following:
# - For SSL/TLS:   SMTP_PORT=465 and set SMTP_SECURE=1, SMTP_IGNORE_TLS=0
# - For No-SSL:    SMTP_PORT=587 and set SMTP_SECURE=0, SMTP_IGNORE_TLS=1
