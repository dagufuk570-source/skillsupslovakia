# Database configuration (Supabase Pooler IPv4; sslmode required)
DATABASE_URL=postgresql://postgres:password@aws-1-eu-central-1.pooler.supabase.com:5432/postgres
TARGET_DATABASE_URL=${DATABASE_URL}?sslmode=require
SUPABASE_DATABASE_URL=${DATABASE_URL}?sslmode=require
# Force DB mode (0 = optional, 1 = required)
REQUIRE_DB=1

# Wait-for-db helper (ms)
WAIT_FOR_DB_TIMEOUT_MS=60000
DATABASE_SSL=1

# Admin authentication (comment out to disable)
ADMIN_USER=admin
ADMIN_PASS=change-me

# SMTP settings for contact form (Natro)
SMTP_HOST=mail.kurumsaleposta.com
# Use one of the following:
# - For SSL/TLS:   SMTP_PORT=465 and set SMTP_SECURE=1, SMTP_IGNORE_TLS=0
# - For No-SSL:    SMTP_PORT=587 and set SMTP_SECURE=0, SMTP_IGNORE_TLS=1
SMTP_PORT=587
SMTP_SECURE=0
SMTP_IGNORE_TLS=1
# Optional: accept invalid certs (set 0 if not needed)
SMTP_ALLOW_INVALID_CERT=0
SMTP_USER=info@example.com
SMTP_PASS=your-smtp-password
CONTACT_TO=info@example.com
SMTP_FROM_EMAIL=info@example.com
SMTP_FROM_NAME=Your Website Name
