# Server Configuration
NODE_ENV=production
PORT=3000

# Database configuration (Supabase Pooler - keep using existing database)
DATABASE_URL=postgresql://postgres.lyqxitpqbnqimxvbvnle:5067899534Ufuk,d@aws-1-eu-central-1.pooler.supabase.com:5432/postgres?pgbouncer=true
